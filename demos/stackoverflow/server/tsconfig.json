{
    "compilerOptions": {
      "module": "ESNext",
      "target": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "paths": {
        "*": ["node_modules/*"]
      },
      "allowImportingTsExtensions": true,
      "noEmit": true,
      "typeRoots": ["./node_modules/@types", "./src/types"]
    },
     "type": "module",
    "include": ["src/**/*"],
    "exclude": ["dist"]
}